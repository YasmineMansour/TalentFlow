<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.CandidatureController"
            prefWidth="1100" prefHeight="700"
            style="-fx-background-color: linear-gradient(to bottom right, #f0f2f5, #e4e8ee);">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 8, 0, 0, 2);">
            <padding><Insets top="16" right="24" bottom="16" left="24"/></padding>
            <Label text="Gestion des Candidatures"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Rafraîchir" onAction="#onRefresh" styleClass="btn-secondary"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="18">
            <padding><Insets top="18" right="20" bottom="18" left="20"/></padding>

            <!-- TABLE -->
            <VBox spacing="12" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 10, 0, 0, 3);">
                <padding><Insets top="16" right="18" bottom="16" left="18"/></padding>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Liste des candidatures"
                           style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="tfSearch" promptText="Rechercher (nom/email)..."
                               onKeyReleased="#onSearch" styleClass="search" prefWidth="250"/>
                </HBox>

                <TableView fx:id="tvCandidatures" VBox.vgrow="ALWAYS"
                           onMouseClicked="#onTableClick">
                    <columns>
                        <TableColumn fx:id="colId"     text="ID"      prefWidth="60"  style="-fx-alignment: CENTER;"/>
                        <TableColumn fx:id="colNom"    text="Nom"     prefWidth="170"/>
                        <TableColumn fx:id="colPrenom" text="Prénom"  prefWidth="170"/>
                        <TableColumn fx:id="colEmail"  text="Email"   prefWidth="250"/>
                        <TableColumn fx:id="colStatut" text="Statut"  prefWidth="140" style="-fx-alignment: CENTER;"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- FORM -->
            <ScrollPane fitToWidth="true" prefWidth="380" minWidth="340"
                        style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox spacing="14"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 10, 0, 0, 3);">
                    <padding><Insets top="18" right="20" bottom="18" left="20"/></padding>

                    <Label text="Formulaire candidature"
                           style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #1a237e;"/>

                    <Separator style="-fx-opacity: 0.3;"/>

                    <GridPane hgap="12" vgap="14">
                        <columnConstraints>
                            <ColumnConstraints minWidth="90" prefWidth="100"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Nom" styleClass="form-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="tfNom" promptText="Nom" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Prénom" styleClass="form-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="tfPrenom" promptText="Prénom" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Email" styleClass="form-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="tfEmail" promptText="ex: nom@mail.com" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Statut" styleClass="form-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbStatut" promptText="EN_ATTENTE / ACCEPTE / REFUSE"
                                  maxWidth="Infinity" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Label fx:id="lblError" wrapText="true" managed="false" visible="false" styleClass="error"/>

                    <Separator style="-fx-opacity: 0.3;"/>
                    <VBox spacing="8">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Button text="Ajouter"   onAction="#onAjouter"   styleClass="btn-primary"  minWidth="80"/>
                            <Button text="Modifier"  onAction="#onModifier"  styleClass="btn-secondary" minWidth="80"/>
                            <Button text="Supprimer" onAction="#onSupprimer" styleClass="btn-danger"   minWidth="85"/>
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Button text="Vider"     onAction="#onClear"     styleClass="btn-ghost"    minWidth="80"/>
                        </HBox>
                    </VBox>

                </VBox>
            </ScrollPane>

        </HBox>
    </center>
</BorderPane>

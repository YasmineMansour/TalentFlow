<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="mainPane"
            prefHeight="750.0"
            prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.HomeController">

    <left>
        <VBox prefWidth="260.0" spacing="6.0" styleClass="sidebar">
            <children>
                <!-- Brand -->
                <Text text="TalentFlow" styleClass="sidebar-title">
                    <font>
                        <Font name="System Bold" size="28.0"/>
                    </font>
                </Text>
                <Text text="Gestion des Entretiens" styleClass="sidebar-subtitle">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Text>

                <Region prefHeight="12"/>
                <Separator opacity="0.15"/>
                <Region prefHeight="8"/>

                <!-- Nav buttons -->
                <Button maxWidth="Infinity"
                        onAction="#loadDashboard"
                        text="   Dashboard"
                        styleClass="sidebar-btn"/>

                <Button maxWidth="Infinity"
                        onAction="#loadEntretiens"
                        text="   Entretiens"
                        styleClass="sidebar-btn"/>

                <Button maxWidth="Infinity"
                        onAction="#loadCandidatures"
                        text="   Candidatures"
                        styleClass="sidebar-btn"/>

                <Region VBox.vgrow="ALWAYS"/>

                <!-- Exit -->
                <Separator opacity="0.15"/>
                <Region prefHeight="4"/>
                <Button maxWidth="Infinity"
                        onAction="#handleExit"
                        text="   Quitter"
                        styleClass="sidebar-exit"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="16"
              style="-fx-background-color: linear-gradient(to bottom right, #f0f2f5, #e4e8ee);">
            <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>

            <Text text="Bienvenue dans TalentFlow" styleClass="welcome-title">
                <font>
                    <Font name="System Bold" size="30.0"/>
                </font>
            </Text>
            <Text text="SÃ©lectionnez un module dans le menu pour commencer" styleClass="welcome-sub">
                <font>
                    <Font size="15.0"/>
                </font>
            </Text>
        </VBox>
    </center>

</BorderPane>

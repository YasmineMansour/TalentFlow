<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="1050.0" style="-fx-background-color: #F8FAFC;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterCandidatureController">
    <children>
        <Pane prefHeight="80.0" prefWidth="1050.0" style="-fx-background-color: #2563EB;">
            <children>
                <Label layoutX="345.0" layoutY="22.0" text="Gestion des Candidatures TalentFlow" textFill="WHITE">
                    <font> <Font name="System Bold" size="24.0" /> </font>
                </Label>
            </children>
        </Pane>

        <VBox layoutX="30.0" layoutY="100.0" prefWidth="350.0" spacing="10.0">
            <children>
                <Label text="Formulaire de saisie" textFill="#1E293B">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>

                <ComboBox fx:id="cbUtilisateurs" prefHeight="35.0" prefWidth="350.0" promptText="Sélectionner un utilisateur" style="-fx-border-color: #CBD5E1;" />

                <ComboBox fx:id="cbOffres" prefHeight="35.0" prefWidth="350.0" promptText="Sélectionner une offre" style="-fx-border-color: #CBD5E1;" />

                <TextField fx:id="tfCvUrl" prefHeight="35.0" promptText="URL du CV" style="-fx-border-color: #CBD5E1;" />

                <TextArea fx:id="taMotivation" prefHeight="150.0" promptText="Motivation..." style="-fx-border-color: #CBD5E1;" wrapText="true" />

                <HBox spacing="10.0">
                    <children>
                        <Button onAction="#enregistrerCandidature" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #2563EB;" text="Ajouter" textFill="WHITE" />
                        <Button onAction="#modifierCandidature" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #F59E0B;" text="Modifier" textFill="WHITE" />
                        <Button onAction="#effacerChamps" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #94A3B8;" text="Vider" textFill="WHITE" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <VBox layoutX="410.0" layoutY="100.0" prefWidth="610.0" spacing="10.0">
            <children>
                <TableView fx:id="tvCandidatures" onMouseClicked="#chargerSelection" prefHeight="350.0" prefWidth="610.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="colUser" prefWidth="80.0" text="User ID" />
                        <TableColumn fx:id="colOffre" prefWidth="80.0" text="Offre ID" />
                        <TableColumn fx:id="colCv" prefWidth="120.0" text="Lien CV" />
                        <TableColumn fx:id="colStatut" prefWidth="90.0" text="Statut" />
                        <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="colMotivation" prefWidth="90.0" text="Motivation" />
                    </columns>
                </TableView>
                <Button onAction="#supprimerCandidature" prefHeight="35.0" prefWidth="610.0" style="-fx-background-color: #EF4444;" text="Supprimer la sélection" textFill="WHITE" />
            </children>
        </VBox>
    </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<BorderPane prefHeight="620.0" prefWidth="980.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.OffreController">
    <stylesheets>
        <URL value="@/style.css" />
    </stylesheets>

    <padding><Insets top="20" right="20" bottom="20" left="20" /></padding>

    <!-- ── LEFT PANEL: Form ──────────────────────────────── -->
    <left>
        <VBox spacing="16.0" prefWidth="300.0" styleClass="panel">
            <!-- Header -->
            <Label text="Gestion des Offres" styleClass="title" />
            <Label text="Créer, modifier ou supprimer une offre d'emploi" styleClass="subtitle" />

            <Separator />

            <!-- Section: Informations -->
            <Label text="INFORMATIONS DE L'OFFRE" styleClass="section-title" />

            <VBox spacing="6">
                <Label text="Titre" styleClass="label-muted" />
                <TextField fx:id="tfTitre" promptText="Ex: Développeur Java Senior" styleClass="field" />
            </VBox>

            <VBox spacing="6">
                <Label text="Description" styleClass="label-muted" />
                <TextArea fx:id="taDescription" prefHeight="90.0" promptText="Décrivez les missions et responsabilités..." styleClass="field-area" wrapText="true" />
            </VBox>

            <VBox spacing="6">
                <Label text="Localisation" styleClass="label-muted" />
                <TextField fx:id="tfLocalisation" promptText="Ex: Tunis, Ben Arous..." styleClass="field" />
            </VBox>

            <VBox spacing="6">
                <Label text="Statut" styleClass="label-muted" />
                <ComboBox fx:id="comboStatut" maxWidth="Infinity" promptText="-- Sélectionner --" styleClass="combo-box" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <!-- Action Buttons -->
            <VBox spacing="10">
                <Button onAction="#handleAjouter" maxWidth="Infinity" styleClass="button, btn-success" text="＋  Ajouter l'offre" />
                <HBox spacing="10">
                    <Button onAction="#handleModifier" HBox.hgrow="ALWAYS" maxWidth="Infinity" styleClass="button, btn-primary" text="Modifier" />
                    <Button onAction="#handleSupprimer" HBox.hgrow="ALWAYS" maxWidth="Infinity" styleClass="button, btn-danger" text="Supprimer" />
                </HBox>
            </VBox>

            <Separator />

            <Button onAction="#ouvrirCandidatures" maxWidth="Infinity" styleClass="button, btn-ghost" text="Voir les Candidatures  →" />
        </VBox>
    </left>

    <!-- ── CENTER: Table ─────────────────────────────────── -->
    <center>
        <VBox spacing="12.0" BorderPane.margin="$margins">
            <padding><Insets left="20" /></padding>

            <Label text="Liste des offres publiées" styleClass="title" />
            <Label text="Cliquez sur une ligne pour la charger dans le formulaire" styleClass="label-muted" />

            <TableView fx:id="tableOffres" onMouseClicked="#chargerSelection" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colTitre" prefWidth="160.0" text="Titre" />
                    <TableColumn fx:id="colDesc" prefWidth="250.0" text="Description" />
                    <TableColumn fx:id="colLoc" prefWidth="130.0" text="Localisation" />
                    <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.GUI.EntretienController"
            prefWidth="1300"
            prefHeight="750"
            styleClass="app-root"
            stylesheets="@styles.css">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="app-topbar">
            <padding>
                <Insets top="16" right="24" bottom="16" left="24"/>
            </padding>

            <Label text="Gestion des Entretiens" styleClass="title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <TextField fx:id="tfSearch" promptText="Rechercher (email, type, statut...)"
                       styleClass="search"/>

            <ComboBox fx:id="cbFilterStatut" promptText="Statut"
                      style="-fx-pref-width: 140;"/>

            <ComboBox fx:id="cbFilterType" promptText="Type"
                      style="-fx-pref-width: 140;"/>

            <Region prefWidth="12"/>

            <Button text="Rafraichir" onAction="#onRefresh" styleClass="btn-refresh"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="25">
            <padding>
                <Insets top="25" right="25" bottom="25" left="25"/>
            </padding>

            <!-- TABLE -->
            <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="panel">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Label text="Liste des entretiens" styleClass="section-title"/>

                <TableView fx:id="tvEntretiens" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colEmail"     text="Email Candidat" prefWidth="180" minWidth="140"/>
                        <TableColumn fx:id="colDateHeure" text="Date / Heure"   prefWidth="140" minWidth="120"/>
                        <TableColumn fx:id="colType"      text="Type"           prefWidth="95"  minWidth="80"/>
                        <TableColumn fx:id="colStatut"    text="Statut"         prefWidth="90"  minWidth="75"/>
                        <TableColumn fx:id="colLieu"      text="Lieu"           prefWidth="100" minWidth="70"/>
                        <TableColumn fx:id="colLien"      text="Lien"           prefWidth="100" minWidth="70"/>
                        <TableColumn fx:id="colNoteTech"  text="Note Tech"      prefWidth="70"  minWidth="60"/>
                        <TableColumn fx:id="colNoteCom"   text="Note Skills"    prefWidth="70"  minWidth="60"/>
                        <TableColumn fx:id="colScore"     text="Score"          prefWidth="120" minWidth="90"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- FORM -->
            <ScrollPane fitToWidth="true" prefWidth="560" minWidth="520" hbarPolicy="NEVER"
                        style="-fx-background-color:transparent; -fx-background:transparent;">
              <VBox spacing="18" styleClass="panel">
                <padding>
                    <Insets top="25" right="28" bottom="25" left="28"/>
                </padding>

                <Label text="Formulaire entretien" styleClass="section-title"
                       style="-fx-text-fill:#1a237e; -fx-font-size:18;"/>

                <Separator/>

                <GridPane hgap="18" vgap="14">

                    <columnConstraints>
                        <ColumnConstraints minWidth="140" prefWidth="145"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                    </columnConstraints>

                    <Label text="Email candidat :" styleClass="form-label"
                           GridPane.rowIndex="0"/>
                    <TextField fx:id="tfEmail" promptText="candidat@email.com"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Date :" styleClass="form-label"
                           GridPane.rowIndex="1"/>
                    <DatePicker fx:id="dpDate"
                                GridPane.rowIndex="1" GridPane.columnIndex="1"
                                maxWidth="Infinity"/>

                    <Label text="Heure :" styleClass="form-label"
                           GridPane.rowIndex="2"/>
                    <TextField fx:id="tfHeure" promptText="HH:mm"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Type :" styleClass="form-label"
                           GridPane.rowIndex="3"/>
                    <ComboBox fx:id="cbType" maxWidth="Infinity"
                              GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Statut :" styleClass="form-label"
                           GridPane.rowIndex="4"/>
                    <ComboBox fx:id="cbStatut" maxWidth="Infinity"
                              GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Lieu :" styleClass="form-label"
                           GridPane.rowIndex="5"/>
                    <TextField fx:id="tfLieu"
                               GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Lien :" styleClass="form-label"
                           GridPane.rowIndex="6"/>
                    <TextField fx:id="tfLien" promptText="https://meet.google.com/..."
                               GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Note Tech :" styleClass="form-label"
                           GridPane.rowIndex="7"/>
                    <TextField fx:id="tfNoteTech" promptText="0 - 20"
                               GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Label text="Note Skills :" styleClass="form-label"
                           GridPane.rowIndex="8"/>
                    <TextField fx:id="tfNoteCom" promptText="0 - 20"
                               GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                    <Label text="Remarque :" styleClass="form-label"
                           GridPane.rowIndex="9"/>
                    <TextArea fx:id="taCommentaire" prefRowCount="3"
                              GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                </GridPane>

                <Separator/>

                <Label fx:id="lblScore" text="Score : -"
                       style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-font-size: 14;"
                       alignment="CENTER" maxWidth="Infinity"/>

                <Separator/>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Ajouter"   onAction="#onAjouter"   styleClass="btn-primary"   minWidth="90"/>
                    <Button text="Modifier"  onAction="#onModifier"  styleClass="btn-feedback"  minWidth="90"/>
                    <Button text="Supprimer" onAction="#onSupprimer" styleClass="btn-danger"    minWidth="95"/>
                    <Button text="Vider"     onAction="#onClear"     styleClass="btn-ghost"     minWidth="75"/>
                </HBox>

                <Button fx:id="btnFeedback" text="Ajouter feedback + REALISE" onAction="#onFeedback"
                        styleClass="btn-feedback" maxWidth="Infinity"
                        style="-fx-font-size:14;"/>

              </VBox>
            </ScrollPane>

        </HBox>
    </center>

</BorderPane>

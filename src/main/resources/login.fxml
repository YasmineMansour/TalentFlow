<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: white;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefWidth="300.0" spacing="20.0">
            <children>
                <Label text="TalentFlow">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
                <Label text="Welcome back! Please login." textFill="#7c7c7c" />

                <VBox spacing="5.0">
                    <children>
                        <Label text="Username" />
                        <TextField fx:id="userField" prefHeight="40.0" promptText="Enter username or 'admin'" style="-fx-background-radius: 5;" />
                    </children>
                </VBox>

                <VBox spacing="5.0">
                    <children>
                        <Label text="Password" />
                        <PasswordField fx:id="passField" prefHeight="40.0" promptText="Enter password" style="-fx-background-radius: 5;" />
                    </children>
                </VBox>

                <Button fx:id="btnLogin" maxWidth="Infinity" onAction="#handleLogin" prefHeight="45.0" styleClass="primary-button" text="Login" />

                <Separator prefWidth="200.0" />

                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="New to TalentFlow?" />
                        <Hyperlink onAction="#handleGoToSignUp" text="Sign Up" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>